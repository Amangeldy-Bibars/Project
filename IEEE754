void func(int x2)
{
int i,d = 1, k=0, exp2=0; 
int t[30]; 
double x, drob, n, y, z; 
x=x2; 
int cel = (int)x; 
while(cel) 
{ 
t[k] = cel%2; 
k++; 
cel /= 2; 
} 
drob = modf(x, &n); 
int a[23]; 
for(i = 0; i < 23; i++) 
{ 
drob *= 2; 
y = modf(drob, &z); 
a[i] = (int)z; 
if(drob >= 1) 
drob = drob - 1; 
} 
/* 
for(i=0; i<k; i++) 
Serial.print(t[i]); 
*/ 
//---------------------â€” 
exp2=k-1+127; 
cel = (int)exp2; 
int t2[10], k3=0; 
d=1; 
while(cel) 
{ 
t2[k3]= cel%2; 
k3++; 
cel /= 2; 
} 
int g=0; 
if(x>=0) 
{
  buf[g]=0;
  g++;
}
else 
{
  buf[g]=1; 
  g++;
}
for(i=7; i>=0; i--) { buf[g]=t2[i]; g++; } 
for(i=k-2; i>=0; i--) { buf[g]=t[i]; g++; } 
for(i = 0; i < 24-k; i++) { buf[g]=a[i]; g++; } 
}

